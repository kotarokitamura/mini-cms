= form_for(@organization, :url => {action: 'update'}) do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2
        = pluralize(@organization.errors.count, "error")
        prohibited this organization from being saved:
      %ul
        - @organization.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label t('attributes.organization.organization_name')
    %br/
    = f.text_field :organization_name
  .field
    = f.label t('attributes.organization.organization_code')
    %br/
    = f.text_field :organization_code
  .actions
    = f.submit
