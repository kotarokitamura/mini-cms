%h1 Listing organizations
%table
  %tr
    %th Organization name
    %th Organization code
    %th
    %th
    %th
  - @organizations.each do |organization|
    %tr
      %td= organization.organization_name
      %td= organization.organization_code
      %td= link_to 'Show', organization
      %td= link_to 'Edit', edit_organization_path(organization)
      %td= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Organization', new_organization_path

%br/
%br/
%p
  ページ:
  = @organizations.current_page
  \/
  = @organizations.num_pages
  %br
  = @organizations.total_count
  件中
  = @organizations.offset_value
  〜
  = @organizations.offset_value + @organizations.length
  件を表示しています

  = paginate @organizations
