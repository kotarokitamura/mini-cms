!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Minicms"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    %link{:rel => "stylesheet", :href => "http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css"}
    %script{:src => "http://code.jquery.com/jquery-1.9.1.min.js"}
    %script{:src => "http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"}

  %body
    %div{'data-role' => "page", :id => "home"}
      %div{'data-role' => "header"}
        %a{:href => "/organizations/users", 'data-icon' => "gear"}
          = t('iphone.settings')
        %h1
          = t('iphone.mini-cms')
        %a{:href => "#{preview_organization_path}"}
          = t('iphone.preview')
      %div{'data-role' => "content"}
        =yield
      %div{'data-role' => "footer", 'data-position' => "fixed"}
        %div{'data-role' => "navbar"}
          %ul
            %li= link_to t('iphone.organization'), edit_organization_path
            %li= link_to t('iphone.organization_info'), edit_organization_infos_organization_path
            %li= link_to t('iphone.image'), edit_images_organization_path
            %li= link_to t('iphone.design'), edit_view_designs_organization_path
